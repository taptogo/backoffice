
<div class="block-header">
    <h2>
        Canais de Vendas
        <small>Crie, edite ou remova</a></small>
    </h2>
</div>
<%= notice_helper %>
<% cols = ["Nome Completo", "Nome do Estabelecimento", "CPF/CNPJ", "ID Pagarme", "Habilitado?", "Opções"] %>
<% path = "sale_channels" %>
<% remove_title = "Deseja remover este Canal de Venda?" %>
<% new_button_title = "Adicionar Canal de Venda" %>
<% iterator = [] %>

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    LISTA DE CANAIS DE VENDAS
                  <a href="<%= path %>/new" class="btn btn-success waves-effect pull-right" style="color:white"> 
                    <i class="material-icons">add</i>
                    <%= new_button_title %></a>
                    <br><br>
                </h2>

            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable" data-source="<%= sale_channels_url(format: "json") %>" id="dataTable">
                      <thead>
                          <tr>
                            <% cols.each do |col| %>
                                <th><%= col %></th>
                              <% end %>
                          </tr>
                      </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




<script type="text/javascript">
    var pac;
      $(function() {
          $('#dataTable').dataTable({
              "bPaginate": true,
              "bLengthChange": true,
              "bFilter": true,
              "bSort": true,
              "bInfo": true,
              "bAutoWidth": true,
              "bJQueryUI": true,
              "bProcessing": true,
              "bServerSide": true,
              "dom": 'Bfrtip',
              "buttons" : [
              'copy', 'csv', 'excel', 'pdf', 'print'
              ],
              "sAjaxSource": $('#dataTable').data('source')

          });
      });

  </script>

