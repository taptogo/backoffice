<%= stylesheet_link_tag    "bootstrap-select.min" %>
<%
    title = "Detalhes da Parceiro" 
    fields1 = ["name", "cnpj", "bank_code","agencia", "agencia_dv", "conta", "conta_dv", "enabled"] 
    special_fields = ["enabled"] 
    displayFields1 = ["Nome", "CPF ou CNPJ", "Banco", "Agencia" , "DV Agência", "Conta", "DV Conta", "Conta habilitada?"] 
    hints1 = ["", "", "", "", "", "", "", ""]
 %>



<% fields = [fields1] %>
<% displayFields = [displayFields1] %>
<% subtitles = ["Dados da Conta Bancária"] %>
<% iterator = @account %>

<div class="block-header">
    <h2>
        <%= title.upcase %>
        <small>Confira os dados abaixo</small>
    </h2>
</div>

<!-- #END# Basic Validation -->
<!-- Advanced Validation -->
<div class="row clearfix">
   <% column = (12 / fields.count).to_i.to_s %>
   <% fields.each.with_index do |field_source, j| %>
   <div class="col-lg-<%= column %> col-md-<%= column %> col-sm-12 col-xs-12">
      <div class="card">
         <div class="header">
            <h2><%= subtitles[j] %></h2>
         </div>
         <div class="body">
            <% field_source.each.with_index do |field, i| %>
            <div class="form-group form-float">
               <% if special_fields.include?(field) && field == "enabled" %>
                <p> <b><%= displayFields[j][i] %></b> </p>
                <p> <%= iterator.enabled? ? "Sim" : "Não" %> </p>
               <% else %>
                <p> <b><%= displayFields[j][i] %></b> </p>
                <p> <%= iterator[field] %> </p>
               <% end %>
            </div>
            <% end %>
         </div>
      </div>
   </div>
   <% end %>
</div>

