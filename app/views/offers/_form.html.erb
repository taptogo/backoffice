<link rel='stylesheet' href='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v4.4.1/mapbox-gl-geocoder.css' type='text/css' />
<script>
   mapboxgl.accessToken = 'pk.eyJ1IjoiYWxsYW5zZHVhcnRlIiwiYSI6ImNqenlvY3I2YTAzM2kzaW12c3BlbjA3bzgifQ.0JKBP7Eexq9HZijQyM5Z6Q';
   var map = new mapboxgl.Map({
      container: 'map-box',
      style: 'mapbox://styles/mapbox/streets-v11',
      center: <%= coordinates %>,
      zoom: 12,
   });

   var geocoder = new MapboxGeocoder({
      accessToken: mapboxgl.accessToken,
      mapboxgl: mapboxgl,
      placeholder: "Informe o endereço da oferta",
   });
   
   map.addControl(geocoder);

   new mapboxgl.Marker()
   .setLngLat(<%= coordinates %>)
   .addTo(map);

   geocoder.on('results', (results) => {
      $("#offer_longitude").val(results.features[0].center[0]);
      $("#offer_latitude").val(results.features[0].center[1]);
   });
</script>
<script type="text/javascript">
   jQuery(function($){
   
     $("#offer_date_to_plain").inputmask('99/99/9999');
     $("#offer_date_from_plain").inputmask('99/99/9999');
   });
   
  $("#offer_partner").change(function(e) {
      triggerUrl( "/api/accounts.json?id=" + $(e.target).val(), $("#offer_account_ids"));
  });

   $("#offer_zip").inputmask('99999-999');
  $("#offer_zip").change(function(){
         var cep_code = $(this).val();
         cep_code = cep_code.replace("-", "");
         if( cep_code.length <= 0 ) return;
         $.get("http://viacep.com.br/ws/" + cep_code + "/json",
            function(result){
               if( result.cep.length <= 0 ){
                  alert(result.message || "Houve um erro desconhecido");
                  return;
               }
               if( result.localidade.length <= 1 ){
                  alert("CEP não encontrado, por favor preencha seu endereço");
                  return;
               }
               $("#offer_zip").val( result.cep );
               $("#offer_city").val( result.localidade );
               $("#offer_neighborhood").val( result.bairro );
               $("#offer_street").val( result.logradouro );
               $("#offer_state").val( result.uf );
   
               $("#offer_street").parents('.form-line').addClass('focused');
               $("#offer_state").parents('.form-line').addClass('focused');
               $("#offer_neighborhood").parents('.form-line').addClass('focused');
               $("#offer_city").parents('.form-line').addClass('focused');
            });
      });

  function triggerUrl(url, select_elem){
     $.getJSON(url, function(json){
         select_elem.empty();
         $.each(json, function (idx, obj) {
             select_elem.append('<option value="' + obj[1] + '">' + obj[0] + '</option>');
         });
           select_elem.selectpicker('refresh');
     })    
   }


</script>