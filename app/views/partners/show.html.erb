<%= stylesheet_link_tag    "bootstrap-select.min" %>
<% path = "partners" %>



<% title = "Detalhes da Parceiro" 

 fields1 = ["name","social","tax","membership", "email", "cnpj", "phone", "url", "facebook", "instagram"] 
 special_fields = ["state","enabled"] 

 displayFields1 = ["Nome Fantasia", "Razão Social", "Taxa de Conveniência Default(%)","Código de Membro",  "Email", "CNPJ", "Telefone", "Site", "Facebook", "Instagram" ] 


 fields2 = ["zip","street", "number", "complement", "neighborhood", "city", "state", "enabled"] 
 hints2 = ["", "" , "", "", "", "", "", "", "" ] 

 displayFields2 = ["CEP", "Rua" , "Número", "Complemento", "Bairro", "Cidade", "Estado", "Habilitada?" ] %>



<% fields = [fields1, fields2] %>
<% displayFields = [displayFields1, displayFields2] %>
<% subtitles = ["Dados da Parceiro", "Local e Endereço"] %>
<% iterator = @partner %>

<div class="block-header">
    <h2>
        <%= title.upcase %>
        <small>Confira os dados abaixo</small>
    </h2>
</div>

<!-- #END# Basic Validation -->
<!-- Advanced Validation -->
<div class="row clearfix">
   <% column = (12 / fields.count).to_i.to_s %>
   <% fields.each.with_index do |field_source, j| %>
   <div class="col-lg-<%= column %> col-md-<%= column %> col-sm-12 col-xs-12">
      <div class="card">
         <div class="header">
            <h2><%= subtitles[j] %></h2>
            <% if j == 0 %>
              <ul class="header-dropdown m-r--5">
                 <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                       <li><a href="javascript:window.history.back();">Voltar</a></li>
                       <li><a href="/<%= path %>/<%= iterator.id.to_s %>/edit">Editar</a></li>
                       <li><a href="/<%= path %>/new?partner=<%= iterator.id.to_s %>">Adicionar Gestor</a></li>
                    </ul>
                 </li>
              </ul>
            <% end %>
         </div>
         <div class="body">
            <% field_source.each.with_index do |field, i| %>
            <div class="form-group form-float">
               <% if special_fields.include?(field) && field == "enabled" %>
               <p> <b><%= displayFields[j][i] %></b> </p>
               <p> <%= iterator.enabled? ? "Sim" : "Não" %> </p>
               <% else %>
               <p> <b><%= displayFields[j][i] %></b> </p>
               <p> <%= iterator[field] %> </p>
               <% end %>
            </div>
            <% end %>
         </div>
      </div>
   </div>
   <% end %>
</div>

<% cols = ["Nome", "E-mail","Parceiro", "Opções"] %>

