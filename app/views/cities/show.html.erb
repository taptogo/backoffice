<%= stylesheet_link_tag    "bootstrap-select.min" %>
<% path = "cities" %>



<% title = "Detalhes da Cidade" 
    fields1 = ["name","state","country", "enabled","soon", "picture" ] 
     hints1 = ["", "" , "", "", "", "", "", "", "" ] 
     special_fields = ["enabled", "picture", "soon", "latitude", "longitude", "description", "sponsored"] 

    displayFields1 = ["Nome","Estado","País", "Exibir como Em Breve", "Habilitada?", "Foto", "Comodidades da Cidade" ] 

 hints1 = ["", "" , "", "", "", "", "", "", "" ] 
%>


<% fields = [fields1] %>
<% displayFields = [displayFields1] %>
<% subtitles = ["Dados da Cidade"] %>
<% hints = [hints1] %>
<% iterator = @city %>

<div class="block-header">
    <h2>
        <%= title.upcase %>
        <small>Confira os dados abaixo</small>
    </h2>
</div>

<!-- #END# Basic Validation -->
<!-- Advanced Validation -->
<div class="row clearfix">
   <% column = (12 / fields.count).to_i.to_s %>
   <% fields.each.with_index do |field_source, j| %>
   <div class="col-lg-<%= column %> col-md-<%= column %> col-sm-12 col-xs-12">
      <div class="card">
         <div class="header">
            <h2><%= subtitles[j] %></h2>
            <% if j == 0 %>
              <ul class="header-dropdown m-r--5">
                 <li class="dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                       <li><a href="javascript:window.history.back();">Voltar</a></li>
                       <li><a href="/<%= path %>/<%= iterator.id.to_s %>/edit">Editar</a></li>
                    </ul>
                 </li>
              </ul>
            <% end %>
         </div>
         <div class="body">
            <% field_source.each.with_index do |field, i| %>
            <div class="form-group form-float">
               <% if special_fields.include?(field) && field == "enabled" %>
               <p> <b><%= displayFields[j][i] %></b> </p>
               <p> <%= iterator.enabled? ? "Sim" : "Não" %> </p>
               <% elsif special_fields.include?(field) && field == "soon" %>
               <p> <%= iterator.soon? ? "Sim" : "Não" %> </p>
               <% else %>
               <p> <b><%= displayFields[j][i] %></b> </p>
               <p> <%= iterator[field] %> </p>
               <% end %>
            </div>
            <% end %>
         </div>
      </div>
   </div>
   <% end %>
</div>



  <% cols = ["Nome","Parceiro", "Posição", "Categorias", "Cidades", "De","Até","Pedidos","Habilitada?", "Opções"] %>


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    LISTA DE OFERTAS
                </h2>

            </div>
            <div class="body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped table-hover dataTable js-exportable" data-source="<%= offers_url(format: "json", city: @city.id) %>" id="dataTable2">
                      <thead>
                          <tr>
                            <% cols.each do |col| %>
                                <th><%= col %></th>
                              <% end %>
                          </tr>
                      </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>





<script type="text/javascript">
      $(function() {
          $('#dataTable2').dataTable({
              "bPaginate": true,
              "bLengthChange": true,
              "bFilter": true,
              "bSort": true,
              "bInfo": true,
              "bAutoWidth": true,
              "bJQueryUI": true,
              "bProcessing": true,
              "bServerSide": true,
              "dom": 'Bfrtip',
              "buttons" : [
              'copy', 'csv', 'excel', 'pdf', 'print'
              ],
              "sAjaxSource": $('#dataTable2').data('source')

          });

          $('#dataTable3').dataTable({
              "bPaginate": true,
              "bLengthChange": true,
              "bFilter": true,
              "bSort": true,
              "bInfo": true,
              "bAutoWidth": true,
              "bJQueryUI": true,
              "bProcessing": true,
              "bServerSide": true,
              "sAjaxSource": $('#dataTable3').data('source')

          });


      });


  </script>


